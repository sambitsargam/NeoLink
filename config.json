{
  "default_agent": "defi_whatsapp_agent",
  "providers": {
    "openai": {
      "model": "anthropic/claude-3-haiku",
      "max_tokens": 1000,
      "temperature": 0.3,
      "timeout": 30,
      "retry_attempts": 3,
      "base_url": "https://openrouter.ai/api/v1"
    }
  },
  "llm_settings": {
    "default_provider": "openai",
    "fallback_chain": ["openai"],
    "enable_monitoring": true,
    "enable_caching": true,
    "enable_debug_logging": false,
    "max_concurrent_requests": 10
  },
  "agents": {
    "defi_whatsapp_agent": {
      "class": "SpoonReactMCP",
      "description": "DeFi assistant for WhatsApp with balance checks and transfer preparation",
      "aliases": ["defi", "whatsapp"],
      "config": {
        "max_steps": 10,
        "tool_choice": "auto"
      },
      "tools": [
        {
          "name": "get_token_price",
          "type": "builtin",
          "description": "Get current token prices",
          "enabled": true,
          "config": {
            "timeout": 30,
            "max_retries": 3
          }
        },
        {
          "name": "get_account_balance",
          "type": "builtin", 
          "description": "Get account balance information",
          "enabled": true,
          "config": {
            "timeout": 30,
            "max_retries": 3
          }
        },
        {
          "name": "get_24h_stats",
          "type": "builtin",
          "description": "Get 24-hour trading statistics",
          "enabled": true,
          "config": {
            "timeout": 30,
            "max_retries": 3
          }
        }
      ]
    }
  }
}